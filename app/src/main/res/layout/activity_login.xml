<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <ImageView
        android:id="@+id/logingView"
        android:layout_width="340dp"
        android:layout_height="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteY="133dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/idtxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:text="아이디 : "
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logingView" />

    <EditText
        android:id="@+id/idedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:ems="7"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/idtxtView"
        app:layout_constraintTop_toBottomOf="@+id/logingView"
        />

    <TextView
        android:id="@+id/passtxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="비밀번호 : "
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idtxtView" />

    <EditText
        android:id="@+id/passedt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:ems="7"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/passtxtView"
        app:layout_constraintTop_toBottomOf="@+id/idedit" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="92dp"
        android:layout_height="112dp"
        android:layout_marginEnd="16dp"
        android:background="#00ff0000"
        android:backgroundTint="#FFFFFF"
        android:text="로그인"
        android:textColor="#373737"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="402dp" />

    <TextView
        android:id="@+id/nouser"
        android:layout_width="258dp"
        android:layout_height="26dp"
        android:layout_marginTop="40dp"
        android:text="아직도 회원이 아니신가요?"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/passtxtView"
        tools:layout_editor_absoluteX="28dp" />

    <Button
        android:id="@+id/joinbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="256dp"
        android:background="#00ff0000"
        android:text="회원가입"
        android:textColor="#373737"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>